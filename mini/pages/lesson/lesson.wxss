  margin-right: 10rpx;
}
.tutor-avatar {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
}
.name-nationality {
  display: flex;
  flex-direction: column;
  text-align: center;
}
.name-nationality .tutor-name {
  font-size: 16px;
  color: #2f4f4f;
  margin-bottom: 12px;
}
