.hover-class {
  background: #f2f2f2 !important;
}


.tutor-wrap {
  display: flex;
  padding: 40rpx 0;
  background-color: #fff;
  align-items: center;
}
.tutor-wrap .tutor-name {
  color: #2f4f4f;
  margin-right: 12rpx;
}
.tutor-wrap .nationality {
  color: #abb4bf;
  text-align: center;
  font-size: 12px;
  font-weight: 300;
  border: 1px solid #dcdcdc;
  border-radius: 10rpx;
  padding: 1px 3px;
}
.profile {
  padding: 0 20rpx 0 40rpx;
  flex: 0 0 104rpx;
}
.profile .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.tutor-wrap .price {
  margin-left: auto;
  color: #abb4bf;
  padding-right: 40rpx;
}

.contact-wrap {
  padding: 10px 0 62px;
}
.contact-wrap button {
  width: 179px;
  font-size: 18px;
  font-weight: 400;
  border-radius: 5px;
  background-color: #3281ff;
  color: #fff;
}

.syllabus-wrap {
  margin: 20rpx 40rpx 60rpx;
  color: #000;
}
.syllabus-wrap .syllabus-label {
  font-size: 38rpx;
  font-weight: 600;
  margin: 58rpx 0 40rpx;
}
.syllabus-wrap .objective-main {
  margin: 2px 0 12px;
}
.syllabus-wrap .objective-item-wrap {
  display: flex;
  align-items: center;
  margin: 24px 0;
}
.syllabus-wrap .objective-item-wrap .list-dot-wrap {
  flex: 0 0 18px;
  padding: 0 2px 0 12px;
}
.syllabus-wrap .list-dot-wrap image.list-dot {
  width: 8px;
  height: 8px;
}

.goto-weoa {
  margin: 10px 20px 30px;
  color: red;
  font-size: 32rpx;
}

.course-description {
  line-height: 42rpx;
  font-size: 29rpx;
  font-weight: 400;
  padding: 0;
}

.qrcode-wrap {
  text-align: center;
  margin-bottom: 60rpx;
}

.qrcode-title {
  font-size: 40rpx;
  font-weight: 500;
  margin: 80rpx 0 30rpx;
}
.qrcode-wrap image {
  width: 50%;
}

.time-wrap {
  margin: 10px 20px 30px;
}
.time-wrap .time-item {
  display: inline-block;
}
.time-wrap .time1,
.time-wrap .time2,
.time-wrap .time3 {
  margin: 0 10rpx;
  font-weight: 500;
}


.button-sp-area .weui-btn {
  width: 260rpx;
  font-weight: 500;
}

.time-wrap {
  background-color: #fff;
  padding: 28rpx 40rpx;
  border-radius: 12rpx;
}

.time-wrap .time1,
.time-wrap .time2,
.time-wrap .time3 {
  color: red;
}

/* avatar */

.enroll-users-wrap {
  display: block;
  text-align: center;
  margin: 40rpx 48rpx 60rpx;
}
.enroll-users-wrap .enroll-user {
  display: inline-block;
}
.personal-image-outside .enroll-avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

