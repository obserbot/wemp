.container {
  padding-bottom: 120rpx;
}

.page-title-wrap .course-title {
  font-size: 36rpx;
  font-weight: 300;
  text-align: center;
  padding: 46rpx 20rpx 0;
}

.page-title-wrap .lesson-title {
  font-size: 42rpx;
  font-weight: 500;
  text-align: center;
  padding: 26rpx 20rpx 46rpx;
}


