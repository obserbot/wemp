.hover-class {
  background: #f2f2f2 !important;
}


.tutor-wrap {
  display: flex;
  padding: 40rpx 0;
  background-color: #fff;
  align-items: center;
}
.tutor-wrap .tutor-name {
  color: #2f4f4f;
  margin-right: 12rpx;
}
.tutor-wrap .nationality {
  color: #abb4bf;
  text-align: center;
  font-size: 12px;
  font-weight: 300;
  border: 1px solid #dcdcdc;
  border-radius: 10rpx;
  padding: 1px 3px;
}
.profile {
  padding: 0 20rpx 0 40rpx;
  flex: 0 0 104rpx;
}
.profile .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.tutor-wrap .price {
  margin-left: auto;
  color: #abb4bf;
  padding-right: 40rpx;
}

.contact-wrap {
  padding: 10px 0 62px;
}
.contact-wrap button {
  width: 179px;
  font-size: 18px;
  font-weight: 400;
  border-radius: 5px;
  background-color: #3281ff;
  color: #fff;
}

.syllabus-wrap {
  margin: 20rpx 40rpx 60rpx;
  color: #000;
}
.syllabus-wrap .syllabus-label {
  font-size: 38rpx;
  font-weight: 600;
  margin: 58rpx 0 40rpx;
}
.syllabus-wrap .objective-main {
  margin: 2px 0 12px;
}
.syllabus-wrap .objective-item-wrap {
  display: flex;
  align-items: center;
  margin: 24px 0;
}
.syllabus-wrap .objective-item-wrap .list-dot-wrap {
  flex: 0 0 18px;
  padding: 0 2px 0 12px;
}
.syllabus-wrap .list-dot-wrap image.list-dot {
  width: 8px;
  height: 8px;
}


.course-description {
  line-height: 42rpx;
  font-size: 29rpx;
  font-weight: 400;
  padding: 0;
  margin-bottom: 60rpx;
}


.chapter-para {
  margin: 30rpx;
  font-size: 32rpx;
}

.chapter-chunk {
  display: flex;
  align-items: center;
}

.chapter-chunk .chunk-comment-wrap {
  min-width: 89rpx;
  display: flex;
  flex-direction: column;
}

.chunk-read {
}

