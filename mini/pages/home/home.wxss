/* home.wxss */

@import '/weui/weui.wxss';

page {
  background: #f5f5f5;
}

.container
{
/* tab spalce for 最新课程 | 热门课程*/
  margin-top: 110rpx;
  /*
  margin-top: 10rpx;
  */
}

.weui-bar__item_on {
  background: #fff;
}

.weui-bar__item_on .weui-navbar__title {
  font-weight: 500;
}

.weui-navbar__slider {
  /**width: 9.2em;*/
  width: 13.4em;
}

.content .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.course-item {
  padding: 8rpx 30rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  align-items: center;
  min-height: 180rpx;
  font-size: 28rpx;
  box-shadow: 0 5rpx 6rpx -4rpx rgba(0,0,0,0.3);
}

.name {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333;
}

.header image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
}

.header .course-type-icon {
  opacity: 0.5;
}

.tutor-avatar {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
}

.real-course-title {
  font-size: 28rpx;
  font-weight: 300;
  color: #696969;
  margin-bottom: 16rpx;
}

.course-title-wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 16rpx 20rpx 34rpx;
}

.course-item .price {
  margin-left: auto;
  color: #778899;
  flex: 0 0 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.course-item .price .course-price {
  color: #1aad19;
  padding: 12rpx 0;
}

.course-item .price .course-time {
  font-size: 24rpx;
}

.content .course-title .title {
  color: #2f4f4f;
  font-size: 34rpx;
  font-weight: 600;
}

.content .img {
  width: 130rpx;
  height: 130rpx;
  margin-left: 20rpx;
}

.content .desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #abb4bf;
}

.label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #abb4bf;
  margin-right: 40rpx;
}

.label image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.footer {
  display: flex;
  align-items: center;
  height: 80rpx;
}

.hover-class,
.navigator-hover {
  background: #f2f2f2 !important;
}

/* Latest Classes title */
.weui-navbar .latest-classes {
  font-size: 34rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin: 20rpx 0;
  text-align: center;
  width: 100%;
}



