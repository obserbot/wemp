/* chunk.wxss */

@import '/weui/weui.wxss';

page {
  background: #f5f5f5;
}

.container {
  padding: 18rpx 16rpx;
}

.text-wrap {
  padding: 18rpx;
  background: #98fb98;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 4rpx 0 grey;
}

.text-wrap text {
  font-size: 36rpx;
  font-weight: 400;
}

.read-wrap {
  margin: 30rpx 40rpx;
}

.read-wrap .avatar-wrap {
  margin: 10rpx 0;
}

.read-wrap .avatar-wrap .avatar {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  margin: 16rpx 16rpx 0;
}

button {
  margin: 30rpx;
}

.chunk-read {
  display: flex;
  align-items: center;
}

.hover-class {
  opacity: 0.4;
  transform: scale(0.9, 0.9);
}



.bg {
  background-image: url("data:image/png;base64,");
  width: 28rpx;
  height: 28rpx;
  background-size: 400%;
  background-position: 100%;
  margin: 0;
}

.voicePlay {
  animation-name: voicePlay;
  animation-duration: 1s;
  animation-direction: normal;
  animation-timing-function: steps(3);
  animation-iteration-count: infinite;
}

@keyframes voicePlay {
  0% {
    background-position: 0;
  }
  100% {
    background-position: 100%;
  }
}



