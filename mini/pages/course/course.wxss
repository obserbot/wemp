/* course.wxss */

@import "/wxParse/wxParse.wxss";

.page-title-wrap .course-title {
  font-size: 56rpx;
  font-weight: 500;
  text-align: center;
  padding: 66rpx 20rpx 50rpx;

  background: linear-gradient(rgba(244,246,249,0.1),  rgba(255,255,255,0.9)),
    url("https://weiyishijie.com/en_edu/leaf3.png");
}


// From postItemTwo.wxss

.content .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.course-item {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 220rpx;
  font-size: 28rpx;
  color: #abb4bf;
}
.name {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333;
}
.header image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 10rpx;
}
.tutor-avatar {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
}
.name-nationality {
  display: flex;
  flex-direction: column;
  text-align: center;
}
.name-nationality .tutor-name {
  font-size: 16px;
  color: #2f4f4f;
  margin-bottom: 12px;
}
.content .img {
  width: 130rpx;
  height: 130rpx;
  margin-left: 20rpx;
}
.content .title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.content .desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #abb4bf;
}
.label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #abb4bf;
  margin-right: 40rpx;
}
.label image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}
.footer {
  display: flex;
  align-items: center;
  height: 80rpx;
}
.hover-class,
.navigator-hover {
  background: #f2f2f2 !important;
}


.tutor-wrap {
  display: flex;
  padding: 40rpx 0;
  background-color: #fff;
  align-items: center;
}
.tutor-wrap .tutor-name {
  color: #2f4f4f;
  margin-right: 12rpx;
}
.tutor-wrap .nationality {
  color: #abb4bf;
  text-align: center;
  font-size: 12px;
  font-weight: 300;
  border: 1px solid #dcdcdc;
  border-radius: 10rpx;
  padding: 1px 3px;
}
.profile {
  padding: 0 20rpx 0 40rpx;
  flex: 0 0 104rpx;
}
.profile .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.tutor-wrap .price {
  margin-left: auto;
  color: #abb4bf;
  padding-right: 40rpx;
}

.contact-wrap {
  margin: 54rpx 0 28rpx;
  padding: 10px 0 62px;
}

.contact-wrap button {
  width: 330rpx;
  font-size: 36rpx;
  font-weight: 400;
  border-radius: 10rpx;
  background-color: #3281ff;
  color: #fff;
}

.syllabus-wrap {
  margin: 10px 20px 30px;
  color: #000;
}

.syllabus-wrap .syllabus-label {
  font-size: 40rpx;
  font-weight: 600;
  margin: 60rpx 0 22rpx;
}

.syllabus-wrap .objective-main {
  margin: 2px 0 12px;
}

.syllabus-wrap .objective-item-wrap {
  display: flex;
  align-items: center;
  margin: 24px 0;
}

.syllabus-wrap .objective-item-wrap .list-dot-wrap {
  flex: 0 0 18px;
  padding: 0 2px 0 12px;
}

.syllabus-wrap .list-dot-wrap image.list-dot {
  width: 8px;
  height: 8px;
}

.goto-weoa {
  margin: 10px 20px 30px;
  color: red;
  font-size: 32rpx;
}

.course-description {
  line-height: 28px;
  font-size: 17px;
  font-weight: 400;
  padding: 0;
}

.course-description .wxParse-p {
  margin: 26rpx 0;
}

.qrcode-wrap {
  text-align: center;
  margin-bottom: 60rpx;
}

.qrcode-title {
  font-size: 40rpx;
  font-weight: 500;
  margin: 80rpx 0 30rpx;
}
.qrcode-wrap image {
  width: 50%;
}

.time-wrap {
  margin: 10px 20px 30px;
}
.time-wrap .time-item {
  display: inline-block;
}
.time-wrap .time1,
.time-wrap .time2,
.time-wrap .time3 {
  margin: 0 10rpx;
  font-weight: 500;
}

/* curriculum */
.curriculum-wrap {
}

.curriculum-wrap .lesson-wrap {
  background: #fff;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin: 24rpx 0;
  display: flex;
}

.curriculum-wrap .lesson-wrap .go {
  margin-left: auto;
  opacity: 0.3;
}

.button-sp-area .weui-btn {
  width: 330rpx;
  font-weight: 500;
}


