.darens-wrap {
  display: flex;
  flex-wrap: wrap;
}
.darens-wrap .one-daren-wrap {
  width: 46%;
  text-align: center;
  padding: 30px 0;
  background-color: #fff;
  margin: 2%;
  border-radius: 6px;
  box-shadow: 0px 2px 2px 0 grey;
}
.darens-wrap .one-daren-wrap .dr-avatar image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.darens-wrap .one-daren-wrap .dr-nickname {
  margin-top: 8px;
}
.darens-wrap .one-daren-wrap .dr-description {
  margin-top: 12px;
}
.darens-wrap .one-daren-wrap .dr-description text {
  font-size: 12px;
  font-weight: 300;
  border: 1px solid #dcdcdc;
  border-radius: 10rpx;
  padding: 1px 3px;
  color: #778899;
}

.page-title-wrap {
  font-size: 28px;
  font-weight: 500;
  text-align: center;
  padding: 30px 0;
}

